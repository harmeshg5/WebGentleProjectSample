
@model  BookStore.Models.BookModel;


<div class="card mb-4 shadow-sm">
    <img class="img-thumbnail" src="@(string.IsNullOrWhiteSpace(Model.CoverImageUrl) ? "/images/House9.jpg" : Model.CoverImageUrl)" />
    <div class="card-body">
        <h3 class="card-title">@(string.IsNullOrWhiteSpace(Model.Title) ? "Name is not available." : @Model.Title)</h3>
        <p class="card-text"> @Model.Description</p>
        <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
                <a href="/book/GetBook/@Model.Id" class="btn btn-sm btn-outline-secondary">View Details</a>
            </div>
            <small class="text-muted">@Model.Author</small>
        </div>
    </div>
</div>
